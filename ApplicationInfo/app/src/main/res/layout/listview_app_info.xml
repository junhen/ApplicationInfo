<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    >
    
    <ImageView 
        android:id="@+id/ivApp"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        />
    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_marginLeft="5dp"
	    >
		<RelativeLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    >
		    <TextView 
		        android:id="@+id/tvAppNameLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/appNameLabel"
		        android:textSize="17sp"
		        />
		    <TextView 
		        android:id="@+id/tvAppName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@+id/tvAppNameLabel"
		        android:layout_marginLeft="3dp"
		        android:textSize="17sp"
		        />
		    <TextView 
		        android:id="@+id/tvPackageLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tvAppNameLabel"
		        android:text="@string/packageLabel"
		        android:layout_marginTop="4dp"
		        android:textSize="17sp"
		        />
		    <TextView 
		        android:id="@+id/tvPackageName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tvAppName"
		        android:layout_alignLeft="@id/tvAppName"
		        android:layout_marginTop="4dp"
		        
		        />
        </RelativeLayout>    
    </RelativeLayout>
    

</LinearLayout>
